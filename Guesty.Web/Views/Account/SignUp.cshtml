@model RegisterViewModel
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="login-page">
    <div class="fomr-wrap">

        <div class="row">
            <div class="col-md-4">
                <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" asp-action="SignUp">
                    <div class="form-head">
                        <h2>@ViewData["Title"]</h2>                      
                    </div>
                    <div class="text-danger">
                        @foreach (var item in ViewContext.ViewData.ModelState)
                        {
                            @(string.Join(", ", item.Value.Errors.Select(x => x.ErrorMessage)));
                        }
                    </div>

                    <div class="form-group">
                        <label asp-for="FirstName"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="LastName"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Role"></label>
                        <select asp-for="Role"
                                class="form-control"
                                asp-items="@(new SelectList(@ViewBag.Role))">
                            <option>Select</option>
                        </select>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword"></label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="IsAgreedTermCondition" class="custom-checkbox" /> Term and condition
                        <span asp-validation-for="IsAgreedTermCondition" class="text-danger"></span>
                    </div>
                    <div class="btn-div">
                        <button type="submit" class="btn btn-primary">Agree and Continue</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
